<Window x:Class="Wpf_DisplayApp.CrawDataResultForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_DisplayApp"
        mc:Ignorable="d"
        Title="CrawDataResultForm" Height="450" Width="800">
    <Grid>
        <Label x:Name="lbBookName" Content="Label" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="66"/>
        <TextBox x:Name="txbResult" Width="750" Height="350" VerticalAlignment="Bottom"></TextBox>
        <Button x:Name="btnSaveToFile" Content="Save to file" HorizontalAlignment="Right" VerticalAlignment="Top" Width="200" Height="66" Click="btnSaveToFile_Click"/>
    </Grid>
</Window>
